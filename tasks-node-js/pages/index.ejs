<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title><%=title %></title>
</head>
<body>
<% if (createPopup) { %>
  <div class="alert alert-primary" role="alert">
    Успешно!
  </div>
<% }  %>
  <section class="pt-3">
    <div class="container">
      <h1 class="text-center"><%=title %></h1>
      <form action="/" method="post" class="mb-3">
        <div class="mb-3">
          <input type="text" class="form-control" id="text" name="title" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      <% if (notes.length) { %>
        <ul class="list-group">
          <% for (let i = 0; i < notes.length; i++) { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><%= notes[i].title %></span>
              <div>
                <button class="btn btn-primary" data-type="change" data-id="<%= notes[i].id %>">change</button>
                <button class="btn btn-danger" data-type="delete" data-id="<%= notes[i].id %>">delete</button>
              </div>
            </li>
          <% } %>
        </ul>
      <% } else { %>
        <p>Notes not found</p>
      <% }%>
    </div>
  </section>

  <script src="app.js" ></script>
</body>
</html>